                  img(src= assetsDir + "images/" + slide.img + ".png", hidden)
            .events__slider__control
              .events__slider__prev.js-prev-slide
                svg
                  use(xlink:href= assetsDir + "images/sprite.symbol.svg#arrow")
              .events__slider__next.js-next-slide
