extends /containers/layout

block variables

block content

  div.page-main.js-main-page
    .banner
      .banner__swiper_left.js-banner-swiper
        .swiper-wrapper
            -
              var slides = [
                "bannerIMG1",
                "bannerIMG2",
                "bannerIMG3",
                "bannerIMG4"
              ]
            each slide in slides
              .swiper-slide
                .swiper-slide__image(style="background-image: url('"+ assetsDir +  "images/" + slide +".png')")
                  img(src=assetsDir + "images/" + slide + ".png", hidden)
                h4.swiper-slide__text Стейк из семги с гарниром на Ваш выбор
        .swiper__controler
          .swiper-button-next.js-next-slide
            svg
              use(xlink:href= assetsDir + "images/sprite.symbol.svg#arrow")
          .swiper-button-prev.js-prev-slide
            svg
              use(xlink:href= assetsDir + "images/sprite.symbol.svg#arrow")
      .banner__swiper_right.js-banner-swiper
        .swiper-wrapper
          -
            var slides = [
              "bannerIMG1",
              "bannerIMG2",
              "bannerIMG3",
              "bannerIMG4"
            ]
          each slide in slides
            .swiper-slide
              .swiper-slide__image(style="background-image: url('" + assetsDir + "images/" + slide + ".png')")
                img(src=assetsDir + "images/" + slide + ".png", hidden)
              h4.swiper-slide__text
                span Стейк из семги с гарниром на Ваш выбор
        .swiper__controler
          .swiper-button-next.js-next-slide
            svg
              use(xlink:href= assetsDir + "images/sprite.symbol.svg#arrow")
          .swiper-button-prev.js-prev-slide
            svg
              use(xlink:href= assetsDir + "images/sprite.symbol.svg#arrow")
    .page-main__menu
      .menu
        p.menu__vertical
          | меню
        .menu__info
          .menu__title
            span.menu__title-background
              | Меню
            span.menu__title-text
              | Меню
          .menu__subtitle
            | Это меню создано специально для вас
          .menu__description
