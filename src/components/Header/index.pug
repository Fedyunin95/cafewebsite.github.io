header.header.js-header(class=" " + header.class)
    div.header__menu-btn.js-header-open
        button.menu__btn_open
            span
        span.tirle
            | Меню
    div.header__menu.js-header-menu
        div.header__menu__wrapper
            button.header__menu__btn_close.js-header-close
                span.text
                    | Закрыть
                span.icon
                    span.first
                    span.last
            ul.list
                -
                    var items = [
                        {
                            link: "menu",
                            text: "Меню",
                        },
                        {
                            link: "about",
                            text: "О нас",
                        },
                        {
                            link: "events",
                            text: "Мероприятия",
                        },
                        {
                            link: "review",
                            text: "Отзывы",
                        },
                        {
                            link: "contacts",
                            text: "Контакты",
                        },
                    ]
                each item, index in items
                    li.list__item.js-list-item(data-image-num= index)
                        a.list__item__link(href= item.link + ".html")= item.text
            a.button.header__btn(href="/")
                | Забронировать
            div.header__contacts
                -
                    var contacts = [
                        {
                            title: "Адрес",
                            info: ['г.Черняховск, ул. Калининградская, 5, ТЦ "Радуга"'],
                        },
                        {
                            title: "Время работы",
                            info: ['Пн-Вс', '11:00 - 23:00'],
                        },
                        {
                            title: "Телефон",
                            info: ['+7 909 782 8450', '+7 909 782 8450']
                        }
                    ]
                each contact in contacts
                    div.contact
                        span.title= contact.title
                        each text in contact.info
                            span.info= text
        div.header__menu__images
            -
                var images = [
                    {link:"headerBG1.png", className: "image-slide_active"},
                    {link:"headerBG2.png", className: ""},
                    {link:"headerBG1.png", className: ""},
                    {link:"headerBG2.png", className: ""},
                    {link:"headerBG1.png", className: ""}
                ]
            each img in images
                div.image-slide.js-list-item-bg(class=img.className style="background-image: url(images/" + img.link + ")")
                    img(src="images/" + img, hidden)
    a.header__logo.logo(href="main.html")
        div.header__logo__icon.logo__icon
        p.header__logo__text.logo__text Leto